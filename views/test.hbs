<div id="id01" class="modal" style="padding-right: 350px; padding-left: 350px; padding-top: 100px; display: {{status2}}">


    <div style="display:{{status}}" class="alert alert-warning alert-dismissible fade show" role="alert" >
        {{data}}
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>

    <form id="form" class="modal-content {{animate}}" action="/sanpham" method="post">
        <div class="imgcontainer">
            <span onclick="document.getElementById('id01').style.display='none'" class="close" title="Close Modal">&times;</span>
            <img src="../public/img/logo.png" alt="Avatar" class="avatar" width="150" height="120">
        </div>

        <div class="container">
            <div class="form-group">
                <div class="form-group">
                    <input value="{{user}}" type="text" name="userAdmin" class="form-control" id="InputUsername"
                           required
                           placeholder="Tên tài khoản">
                </div>
                <div class="form-group">
                    <input value="{{pass}}" type="password" name="passwordAdmin" class="form-control" id="InputPassword"
                           required
                           placeholder="Mật khẩu">
                </div>

                <div class="container" style="text-align: center;">
                    <button type="submit" style="display: inline-block; width: 300px; border-radius: 20px"
                            class="signupbtn" name="sm" value="1">Đăng nhập
                    </button>
                </div>

            </div>
        </div>
    </form>


</div>

<script>

    // Get the modal
    let modal = document.getElementById('id01');
    let form = document.getElementById('form');

    // When the user clicks anywhere outside of the modal, close it
    window.onclick = function (event) {
        if (event.target == modal) {
            modal.style.display = "none";
            form.className += ' animate';
        }
    }
</script>

