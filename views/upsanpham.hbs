<div class="container rounded-bottom bg-light ">
    <div class="col-sm-10  rounded-bottom bg-light " style="padding-right: 3%">
        <hr>
        <hr>
        <form action="/uploadProduct" method="post" enctype="multipart/form-data" class=" container col-10">
            <div class="form-group">
                <label for="nameSP">Tên sản phẩm</label>
                <input type="text" class="form-control" name="nameSP">
            </div>
            <div class="form-group">
                <label for="priceSP">Giá sản phẩm</label>
                <input type="text" class="form-control" name="priceSP">
            </div>
            <div class="form-group">
                <label for="exImage">Hình ảnh</label>
                <input type="file"  class="form-control-file" name="exImage">
            </div>
            <div class="form-group">
                <label for="classifySP">Loại sản phẩm</label>
                <input type="text" class="form-control" name="classifySP">
            </div>
            <div class="form-group">
                <label for="descriptionSP">Miêu tả sản phẩm</label>
                <input type="text" class="form-control" name="descriptionSP">
            </div>
            <div class="form-group">
                <label for="slSP">Số lượng</label>
                <input type="text" class="form-control" name="slSP">
            </div>
            <div class="form-group">
                <label for="slSP">Rating</label>
                <input type="text" class="form-control" name="rateSP">
            </div>

            <div style="display: {{status}}" class="alert alert-warning alert-dismissible fade show" role="alert">
                {{data}}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <button type="submit" name="sm" value="1" class="btn btn-primary">Đăng</button>
            <button type="reset" class="btn btn-primary">Hủy</button>
        </form>

        <br><br><br>
    </div>
